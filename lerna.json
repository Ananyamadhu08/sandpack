{
  "packages": [
    "sandpack-client",
    "sandpack-react",
    "sandpack-themes"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "createRelease": "github",
      "conventionalCommits": true,
      "message": "chore: [skip ci] bump packages",
      "ignoreChanges": [
        "**/*.md",
        "**/*.stories.mdx",
        "**/*.stories.@(js|jsx|ts|tsx)"
      ]
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore: [skip ci] bump packages"
    }
  },
  "version": "1.1.0-alpha.4"
}
